{
  "name": "pvm",
  "version": "1.0.0",
  "description": "PHP Version Manager CLI",
  "main": "dist/cli.js",
  "bin": {
    "pvm": "dist/cli.js"
  },
  "scripts": {
    "build": "tsc && npm run build:bundle && npm run build:exe && npm run build:installer",
    "test": "jest",
    "start": "node dist/cli.js",
    "build:bundle": "npx esbuild dist/cli.js --bundle --platform=node --target=node18 --outfile=dist/pvm.js",
    "build:exe": "pkg dist/pvm.js --targets win --output pvm.exe",
    "build:installer": "npx electron-builder --win --x64"
  },
  "keywords": [
    "php",
    "version",
    "manager",
    "cli",
    "pvm",
    "Kalybos"
  ],
  "pkg": {
    "assets": [
      "dist/config/**/*",
      "dist/commands/**/*",
      "dist/core/**/*",
      "dist/utils/**/*",
      "node_modules/axios/dist/**/*"
    ]
  },
  "author": "Kalybos",
  "license": "MIT",
  "dependencies": {
    "@types/node": "^20.1.3",
    "axios": "^1.4.0",
    "chalk": "^4.1.2",
    "cheerio": "^1.0.0-rc.12",
    "commander": "^11.0.0",
    "decompress": "^4.2.1",
    "enquirer": "^2.4.1",
    "fs-extra": "^11.1.1",
    "ora": "^5.4.1",
    "typescript": "^5.0.4"
  },
  "devDependencies": {
    "@types/decompress": "^4.2.7",
    "@types/fs-extra": "^9.0.13",
    "@types/jest": "^29.5.3",
    "esbuild": "^0.25.8",
    "jest": "^29.5.0",
    "ts-jest": "^29.1.0"
  }
}